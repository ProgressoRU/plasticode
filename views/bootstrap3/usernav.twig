{% if auth.user %}
	<li class="dropdown">
	  	<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ auth.user.name }}{# ({{ auth.role.name }})#} <span class="caret"></span></a>
		<ul class="dropdown-menu">
			{% if user_actions %}
				{% for type, actions in user_actions %}
					{% if type == 'create' %}
						{% for key, value in actions %}
							<li><a href="{{ path_for('admin.entities.' ~ key) ~ '?create=true' }}">{{ value }}</a></li>
						{% endfor %}
					{% endif %}
				{% endfor %}
 				<li role="separator" class="divider"></li>
			{% endif %}
 			{% if auth.editor %}
				<li><a href="{{ path_for('admin.index') }}">{{ admin_title ?? 'Админ' }}</a></li>
 			{% endif %}
			<li><a href="javascript:void(0);" ng-click="passwordChange();">Смена пароля</a></li>
			<li><a href="javascript:void(0);" ng-click="signOut();">Выход</a></li>
 		</ul>
	</li>
{% else %}
	{#<li><a href="javascript:void(0);" ng-click="signUp();">Регистрация</a></li>#}
	<li><a href="javascript:void(0);" ng-click="signIn();">Вход</a></li>
{% endif %}
